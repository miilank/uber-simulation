<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    tools:context=".features.shared.profile.ChangePasswordDialogFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black" />

                <ImageButton
                    android:id="@+id/btn_close"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:contentDescription="Close"
                    app:tint="@color/app_text_secondary"
                    android:scaleType="centerInside"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <!-- Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="none">

                <!-- Old Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Old Password"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#364153" />

                <EditText
                    android:id="@+id/et_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/input_base"
                    android:padding="12dp"
                    android:hint="Enter old password"
                    android:inputType="textPassword"
                    android:textColor="@color/app_dark" />

                <!-- New Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Password"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#364153"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/input_base"
                    android:padding="12dp"
                    android:hint="Enter new password (min 8 chars)"
                    android:inputType="textPassword"
                    android:textColor="@color/app_dark" />

                <!-- Confirm Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#364153"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/input_base"
                    android:padding="12dp"
                    android:hint="Confirm new password"
                    android:inputType="textPassword"
                    android:textColor="@color/app_dark" />

                <!-- Error message -->
                <TextView
                    android:id="@+id/tv_error_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>

            <!-- Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="16dp"
                android:paddingTop="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_transparent"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_accent"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
