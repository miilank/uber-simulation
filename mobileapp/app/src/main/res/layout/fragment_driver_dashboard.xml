<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboardScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Top cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Current status -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_status"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/bg_dot_green"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/active"
                            android:textColor="#111827"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="0dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:gravity="center"
                    android:text="@string/go_offline"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_btn_dark"/>
            </FrameLayout>

            <!-- Working hours -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/working_hours"
                    android:textColor="#111827"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/active_last_24h"
                        android:textColor="#6B7280"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tvWorkActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_4h_25min"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/limit"
                        android:textColor="#6B7280"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tvWorkLimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_4h_25min_8h_00min"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pbWork"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="55"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_work"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Current ride -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginTop="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_ride"
                android:textColor="#111827"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center"
                android:text="@string/assigned"
                android:textSize="12sp"
                android:textColor="#1D4ED8"
                android:background="@drawable/bg_assigned"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bulevar_oslobo_enja_46_ulica_narodnih_heroja_14"
                android:textColor="#111827"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passengers_dots"
                android:textColor="#374151"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPassengers"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:overScrollMode="always"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:scrollbarStyle="insideInset"
                    android:nestedScrollingEnabled="true" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/start_ride"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#111827"
                    android:background="@drawable/bg_btn_lime"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/cancel_ride"
                    android:textSize="13sp"
                    android:textColor="#111827"
                    android:background="@drawable/bg_btn_gray"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/panic"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_btn_red"/>
            </LinearLayout>

            <!-- Map -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:backgroundTint="#F9FAFB">

                <FrameLayout
                    android:id="@+id/mapContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Booked rides -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/booked_rides"
                android:textColor="#111827"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBookedRides"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
