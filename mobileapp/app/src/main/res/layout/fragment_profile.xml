<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_bg"
    android:paddingBottom="24dp"
    tools:context=".ui.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">
<!--        android:paddingStart="16dp"-->
<!--        android:paddingEnd="16dp"-->
<!--        android:paddingTop="8dp"-->
<!--        android:paddingBottom="16dp">-->

        <!-- Driver Activity Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_driver_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            android:visibility="visible">  <!-- default hidden for passenger -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_driver_activity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver Activity"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tv_time_worked_label"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Time worked today"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:id="@+id/tv_time_worked_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0h 0m"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_medium" />
                </LinearLayout>

                <!-- Progress bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progress_time_worked"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:max="480"
                        android:progress="0"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_lime_rounded" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp">
                        <TextView
                            android:id="@+id/tv_progress_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0h"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/app_text_secondary"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_progress_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8h"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/app_text_secondary"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Profile Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="24dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Profile image with accent border -->
                <FrameLayout
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginEnd="16dp"
                    android:foregroundGravity="center">

                    <ImageView
                        android:id="@+id/profile_border_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_border"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_defaultprofile"
                        android:contentDescription="Profile picture" />

                    <ImageButton
                        android:id="@+id/btn_edit_photo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/btn_accent"
                        android:contentDescription="Edit photo"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="@color/app_dark"
                        tools:ignore="TouchTargetSizeCheck" />
                </FrameLayout>

                <!-- Name & Email -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Andrew Wilson"
                        android:textSize="22sp"
                        android:textColor="#364153"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="34sp"/>

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="andrewwilson@email.com"
                        android:textSize="14sp"
                        android:textColor="@color/app_text_secondary"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textSize="18sp"
                    android:textColor="@color/app_dark"
                    android:fontFamily="sans-serif-medium"/>

                <!-- First and Last name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/vec_profile"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="First Name"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_base"
                            android:padding="12dp"
                            android:hint="First name"
                            android:textColor="@color/app_dark"
                            android:inputType="textPersonName"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/vec_profile"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last Name"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_base"
                            android:padding="12dp"
                            android:hint="Last name"
                            android:textColor="@color/app_dark"
                            android:inputType="textPersonName"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/vec_mail"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="#364153"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_base"
                    android:hint="E-Mail"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/app_dark"/>

                <!-- Address -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/vec_location"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="#364153"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_base"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:padding="12dp"
                    android:textColor="@color/app_dark"/>

                <!-- Phone -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/vec_phone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="#364153"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_base"
                    android:hint="Phone number"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textColor="@color/app_dark"/>

                <TextView
                    android:id="@+id/tv_error_message"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/design_default_color_error"
                    android:fontFamily="@font/poppins"/>

                <!-- Action Buttons -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/btn_transparent"
                    android:text="Change Password"
                    android:textColor="#4B5563"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_update_profile"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:background="@drawable/btn_accent"
                        android:text="Update Profile"
                        android:textColor="@color/app_dark"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/poppins"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:background="@drawable/btn_transparent"
                        android:text="Cancel"
                        android:textColor="#4B5563"
                        android:textAllCaps="false"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins"
                        />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vehicle Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Information"
                    android:textSize="18sp"
                    android:textColor="@color/app_dark"
                    android:fontFamily="sans-serif-medium"/>

                <!-- Vehicle Model Type Row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vehicle Model"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_vehicle_model"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Model"
                            android:fontFamily="@font/poppins"
                            android:textFontWeight="500"
                            android:textSize="20sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vehicle Type"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_vehicle_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Type"
                            android:fontFamily="@font/poppins"
                            android:textFontWeight="500"
                            android:textSize="20sp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <!-- License Plate Seats Row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="License Plate"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_license_plate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Plate"
                            android:fontFamily="@font/poppins"
                            android:textFontWeight="500"
                            android:textSize="20sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seats"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_seats"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:fontFamily="@font/poppins"
                            android:textFontWeight="500"
                            android:textSize="20sp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <!-- Vehicle Model Type Row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Infant Support"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_infant_support"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="False"
                            android:fontFamily="@font/poppins"
                            android:textFontWeight="500"
                            android:textSize="20sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pet Support"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_pet_support"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Type"
                            android:fontFamily="@font/poppins"
                            android:textFontWeight="500"
                            android:textSize="20sp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>