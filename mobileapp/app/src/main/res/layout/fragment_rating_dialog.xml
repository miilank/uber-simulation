<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate your ride"
                android:textColor="#111827"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="14dp" />

            <!-- Driver rating -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver rating"
                android:textColor="#374151"
                android:textStyle="bold"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/rowDriverStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="14dp" />

            <!-- Vehicle rating -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle rating"
                android:textColor="#374151"
                android:textStyle="bold"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/rowVehicleStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="14dp" />

            <!-- Comment -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment (optional)"
                android:textColor="#374151"
                android:textStyle="bold"
                android:textSize="13sp"
                android:paddingBottom="8dp" />

            <EditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="top"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:maxLength="500"
                android:padding="12dp"
                android:hint="Share your experience..."
                android:textSize="13sp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:background="@drawable/bg_input_outline" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/500"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                android:paddingTop="6dp"
                android:paddingBottom="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#111827"
                    android:background="@drawable/bg_neutral" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.6"
                    android:enabled="false"
                    android:background="@drawable/bg_btn_dark" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
