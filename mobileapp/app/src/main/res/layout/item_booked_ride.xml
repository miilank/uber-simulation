<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBookedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_18_08"
                android:textColor="#111827"
                android:textStyle="bold"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvBookedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_22_30"
                android:textColor="#6B7280"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvBookedRoute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pickup_destination"
            android:textColor="#111827"
            android:textSize="13sp"
            android:textStyle="bold"
            android:paddingEnd="10dp"
            android:maxLines="2"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:id="@+id/badgePassengers"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/bg_passengers_badge">

            <ImageView
                android:id="@+id/ivPassengers"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_passengers"
                app:tint="#374151"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tvBookedPassengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/_2"
                android:textColor="#111827"
                android:textStyle="bold"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/requirementsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/pillBookedStatus"
            android:layout_width="96dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="@string/scheduled"
            android:textSize="12sp"
            android:textColor="#334155"
            android:background="@drawable/bg_scheduled"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/btnCancelRide"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_red"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#F3F4F6"/>
</LinearLayout>
