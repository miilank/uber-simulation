<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_change_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:background="@color/app_bg"
    tools:context=".features.shared.pages.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Old Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Old:"
                    android:textSize="18sp"
                    android:textColor="@color/app_dark"
                    android:fontFamily="sans-serif-medium"/>

                <FrameLayout
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_border"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/profile_image_old"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_defaultprofile"
                        android:contentDescription="Profile picture" />

                </FrameLayout>

                <!-- First and Last name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/vec_profile"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="First Name"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_old_first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_base"
                            android:padding="12dp"
                            android:hint="First name"
                            android:textColor="@color/app_dark"
                            android:inputType="textPersonName"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/vec_profile"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last Name"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_old_last"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_base"
                            android:padding="12dp"
                            android:hint="Last name"
                            android:textColor="@color/app_dark"
                            android:inputType="textPersonName"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/vec_mail"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="#364153"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_old_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_base"
                    android:hint="E-Mail"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/app_dark"
                    android:focusable="false"
                    android:clickable="false"/>

                <!-- Address -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/vec_location"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="#364153"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_old_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_base"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:padding="12dp"
                    android:textColor="@color/app_dark"
                    android:focusable="false"
                    android:clickable="false"/>

                <!-- Phone -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/vec_phone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="#364153"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/et_old_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_base"
                    android:hint="Phone number"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textColor="@color/app_dark"
                    android:focusable="false"
                    android:clickable="false"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Old Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New:"
                    android:textSize="18sp"
                    android:textColor="@color/app_dark"
                    android:fontFamily="sans-serif-medium"/>

                <FrameLayout
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_border"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/profile_image_new"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_defaultprofile"
                        android:contentDescription="Profile picture" />

                </FrameLayout>

                <!-- First and Last name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/vec_profile"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="First Name"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_new_first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_base"
                            android:padding="12dp"
                            android:hint="First name"
                            android:textColor="@color/app_dark"
                            android:inputType="textPersonName"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/vec_profile"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last Name"
                                android:fontFamily="@font/poppins"
                                android:textSize="12sp"
                                android:textColor="#364153"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_new_last"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_base"
                            android:padding="12dp"
                            android:hint="Last name"
                            android:textColor="@color/app_dark"
                            android:inputType="textPersonName"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/vec_mail"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="#364153"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_new_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_base"
                    android:hint="E-Mail"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/app_dark"
                    android:focusable="false"
                    android:clickable="false"/>

                <!-- Address -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/vec_location"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="#364153"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_new_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_base"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:padding="12dp"
                    android:textColor="@color/app_dark"
                    android:focusable="false"
                    android:clickable="false"/>

                <!-- Phone -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/vec_phone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:fontFamily="@font/poppins"
                        android:textSize="12sp"
                        android:textColor="#364153"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/et_new_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_base"
                    android:hint="Phone number"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textColor="@color/app_dark"
                    android:focusable="false"
                    android:clickable="false"/>



            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_approve"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/btn_accent"
            android:text="Approve update"
            android:textColor="@color/app_dark"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reject"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/btn_transparent"
            android:text="Reject update"
            android:textColor="#4B5563"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>